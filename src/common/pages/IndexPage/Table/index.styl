.root
  margin-top 30px
  display flex
  flex-direction column
  align-items flex-start
  border-top 1px solid $black
  min-width 60%
  max-width 100%
  
.itemWord
  display flex
  border: 1px solid $black
  border-top none
  border-right none
  width 100%
  text-align left
  min-height 50px

.word
  padding 10px
  font-weight 700
  width 45%
  flex-shrink 0

.translate 
  padding 10px
  white-space pre-wrap
  width 25%
  flex-shrink 0
  border-left 1px solid $black
  border-right 1px solid $black

.checkField 
  min-width 40px

.delete
  padding 10px
  background-color crimson 
  color white
  display flex
  justify-content start
  align-items center
