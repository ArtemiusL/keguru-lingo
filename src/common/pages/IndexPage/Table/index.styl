.root
  margin-top 30px
  display flex
  flex-direction column
  align-items flex-start
  border-top 1px solid $black
  width 60%
  
.itemWord
  display flex
  border: 1px solid $black
  border-top none
  border-right none
  width 100%
  text-align left

.word
  padding 10px
  font-weight 700
  width 45%
  flex-shrink 0

.translate 
  padding 10px
  white-space pre-wrap
  width 45%
  flex-shrink 0
  border-left 1px solid $black
  border-right 1px solid $black
  